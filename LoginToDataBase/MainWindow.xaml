<Window x:Class="LoginToDataBase.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LoginToDataBase"
        mc:Ignorable="d"
       Title="MainWindow" Height="350" Width="350" >
    <Grid>
        <Frame Name="mainFrame" NavigationUIVisibility="Hidden">
            <Frame.Content>
                <StackPanel Margin="30,30,30,10">
                    <TextBlock Text="Username:" />
                    <TextBox x:Name="txtUsername" Margin="0,0,0,10" />

                    <TextBlock Text="Password:" />
                    <PasswordBox x:Name="txtPassword" Margin="0,0,0,10" />

                    <Button Content="Login" Click="btnLogin_Click" />

                    <Label x:Name="lblMessage" Content="" HorizontalAlignment="Center" VerticalAlignment="Top"  Margin="0,10,0,0" Background="White" />
                    <Button x:Name="registerClick" Content="Register" FontSize="8"  HorizontalAlignment="Right" Click="btnRegister_Click" Height="15" Width="40"/>
                </StackPanel>

            </Frame.Content>
        </Frame>

        <!-- Register button positioned at the bottom-right corner -->

    </Grid>
</Window>
