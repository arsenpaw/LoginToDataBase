<Window x:Class="LoginToDataBase.CriticalWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LoginToDataBase"
        mc:Ignorable="d"
        Title="Unrecoverable Action" Height="120" Width="380">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="This action cannot be recovered. Are you sure you want to proceed?"
                       TextWrapping="Wrap" Margin="10"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                <Button x:Name="btnYes" Content="Yes" Width="80" Margin="5" Click="btnYes_Click"/>
                <Button x:Name="btnNo" Content="No" Width="80" Margin="5" Click="btnNo_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
